
<select id = "textselect" name="text_select" onchange="showDiv(this)">
  <option value="alice">Alice in Wonderland by Lewis Carroll</option>
  <option value="grimm">Grimm's Fairy Tales by the brothers Grimm</option>
  <option value="dracula">Dracula by Bram Stoker</option>
  <option value="import" onClick"showDiv()>Import your own file</option>
</select>

<form id="uploadbanner" enctype="multipart/form-data" method="post" action="#" style="display: none;">
   <input id="fileupload" name="myfile" type="file" />
   <input type="submit" value="submit" id="submit" />
</form>

